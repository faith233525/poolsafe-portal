{
  "name": "pool-safe-portal-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "build": "tsc",
    "seed": "ts-node scripts/seed.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write ..",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --reporter=default --coverage",
    "test:watch": "vitest",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm run test",
    "test:e2e": "cd frontend && npx cypress run --browser chrome --headless",
    "test:all": "npm run -s test:backend && npm run -s test:frontend && npm run -s test:e2e",
    "prepare": "husky install",
    "release": "semantic-release",
    "generate:api-types": "openapi-typescript openapi/openapi.yaml -o shared/api-client/types.ts",
    "lint:openapi": "spectral lint openapi/openapi.yaml",
    "openapi:diff": "openapi-diff --fail-on-breaking main-openapi.yaml openapi/openapi.yaml"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.7",
    "openapi-typescript": "^7.4.0",
    "prettier": "^3.2.5",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "@stoplight/spectral-cli": "^6.11.0",
    "openapi-diff": "^0.3.0"
  },
  "optionalDependencies": {
    "prom-client": "^15.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "openapiClient": {
    "input": "openapi/openapi.yaml",
    "output": "shared/api-client/types.ts"
  }
}
